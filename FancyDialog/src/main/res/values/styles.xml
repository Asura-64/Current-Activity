<resources>
	<style name="FancyDialogAnimationV1">
	    <item name="android:windowEnterAnimation">@anim/fancyAnimationEnter</item>
		<item name="android:windowExitAnimation">@anim/fancyAnimationExit</item>
	</style>
    <style name="FancyDialogAnimationV2">
        <item name="android:windowEnterAnimation">@anim/bottomSheetEnter</item>
        <item name="android:windowExitAnimation">@anim/bottomSheetClose</item>
	</style>
    <style name="FancyDialogThemeV1">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:buttonBarStyle">@android:style/Holo.Light.ButtonBar.AlertDialog</item>
        <item name="android:buttonBarButtonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>

